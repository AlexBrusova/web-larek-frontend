{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./dist", // Указывает, куда компилировать выходные файлы
    "rootDir": "./src", // Указывает корневую директорию исходных файлов
  },
  "include": ["src/index.ts", "src/types/*.d.ts"]
}
